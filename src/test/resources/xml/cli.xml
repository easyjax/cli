<arguments
  xmlns="http://commons.safris.org/cli.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://commons.safris.org/cli.xsd ../../../main/resources/xsd/cli.xsd">

  <option required="true" valueSeparator="=">
    <name long="date" short="D"/>
    <argument name="yyMMdd" use="optional"/>
    <description>use the yyMMdd date</description>
  </option>

  <option required="true">
    <name long="user" short="U"/>
    <argument name="USER" use="required" default="asgus"/>
    <description>run on the specified USER</description>
  </option>

  <option>
    <name long="silent"/>
    <description>silent mode</description>
  </option>

  <option>
    <name short="V"/>
    <description>verbose mode</description>
  </option>

</arguments>